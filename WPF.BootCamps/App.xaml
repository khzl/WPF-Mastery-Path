<Application x:Class="WPF.BootCamps.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF.BootCamps"
             StartupUri="Views/LoginView.xaml">
    <!-- StartupUri="MainWindow.xaml" يمكن تغييره إلى نافذة أخرى-->
    <Application.Resources>
        <!-- الموارد المشتركة في التطبيق -->
        <!-- Style Button -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#202020"/>
        <SolidColorBrush x:Key="DisplayBackground" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0078D7"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#3B3B3B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="4" 
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#606060"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NumberButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#323232"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="OperatorButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#3B3B3B"/>
            <Setter Property="Foreground" Value="#85C1E9"/>
        </Style>

        <Style x:Key="EqualsButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1C91F2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ClearButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Foreground" Value="#E74C3C"/>
        </Style>

        <Style x:Key="ScientificButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#ABB2B9"/>
        </Style>
    </Application.Resources>
</Application>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="SidebarBack" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
    <SolidColorBrush x:Key="TextDark" Color="#1E293B"/>

    <Style TargetType="GroupBox">
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="BorderBrush" Value="#E2E8F0"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="Padding" Value="0,15,0,0"/>
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontWeight="Bold" Foreground="{StaticResource AccentBlue}" FontSize="14" Margin="0,0,0,10"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ActionButton" TargetType="Button">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Padding" Value="20,0"/>
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
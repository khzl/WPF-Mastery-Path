<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryColor">#6366F1</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#4F46E5"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="TextDarkBrush" Color="#1E293B"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E2E9F0"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="White"/>
</ResourceDictionary>
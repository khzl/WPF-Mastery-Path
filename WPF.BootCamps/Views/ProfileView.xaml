<Window x:Class="WPF.BootCamps.Views.ProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.BootCamps.Views"
        mc:Ignorable="d"
        Title="ProfileView" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Grid>
        <Border Height="180" VerticalAlignment="Top" Background="#4834D4" CornerRadius="0,0,50,50"/>

        <StackPanel Margin="0,80,0,0" HorizontalAlignment="Center">

            <Border Width="120" Height="120" CornerRadius="60" BorderBrush="White" BorderThickness="4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="5" Opacity="0.2"/>
                </Border.Effect>
                <Ellipse>
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="https://via.placeholder.com/150" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Border>

            <TextBlock Text="khazaal Emad" FontSize="24" FontWeight="Bold" Foreground="#2F3640" 
                       HorizontalAlignment="Center" Margin="0,15,0,5"/>
            <TextBlock Text="مصمم واجهات ومبرمج WPF" FontSize="14" Foreground="#7F8C8D" 
                       HorizontalAlignment="Center"/>

            <Separator Background="#DCDDE1" Margin="20,20" Width="200"/>

            <StackPanel Margin="30,0">
                <Border Background="White" CornerRadius="15" Padding="15" Margin="0,5">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.05" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📧" Margin="0,0,15,0"/>
                        <TextBlock Text="ahmed.dev@example.com" VerticalAlignment="Center" Foreground="#2F3640"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="15" Padding="15" Margin="0,5">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.05" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📍" Margin="0,0,15,0"/>
                        <TextBlock Text="الرياض، المملكة العربية السعودية" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Button Content="تعديل الملف الشخصي" Background="#4834D4" Foreground="White" 
                    Padding="20,10" Margin="0,30,0,10" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
    </Grid>
    
</Window>

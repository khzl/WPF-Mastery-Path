<Window x:Class="WPF.BootCamps.Views.Day_4.Practical"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.BootCamps.Views.Day_4"
        mc:Ignorable="d"
        Title="Practical" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <!-- Header -->
            <Border
                Background="#2D2D30"
                Height="60"
                DockPanel.Dock="Top"/>
            <!-- Side Bar -->
            <Border
                Background="#3F3F46"
                Width="200"
                DockPanel.Dock="Left"/>
            
            <!-- Main Content -->
            <Grid>
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300">
                    <TextBlock
                        Text="DashBoard"
                        FontSize="22"
                        FontWeight="Bold"
                        Margin="0,0,0,16"
                        HorizontalAlignment="Center"/>
                    <Button
                        Content="Open"
                        Height="40"
                        Margin="0,0,0,10"
                        FontSize="20"
                        FontWeight="Bold"/>
                    <Button
                        Content="Settings"
                        Height="40"
                        FontSize="18"
                        FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>

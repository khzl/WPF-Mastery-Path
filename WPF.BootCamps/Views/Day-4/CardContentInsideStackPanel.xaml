<Window x:Class="WPF.BootCamps.Views.Day_4.CardContentInsideStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.BootCamps.Views.Day_4"
        mc:Ignorable="d"
        Title="CardContentInsideStackPanel" Height="450" Width="800">
    <Grid Background="#ECF0F1">
        <Border
            Background="White"
            Padding="16"
            Margin="32"
            CornerRadius="8"
            Width="300"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Card Title"
                           FontSize="18" FontWeight="Bold"
                           Margin="0,0,0,16"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Description text here"
                           TextAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,0,0,16"/>
                <Button
                    Content="Action"
                    Height="35"
                    HorizontalAlignment="Stretch"
                    FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

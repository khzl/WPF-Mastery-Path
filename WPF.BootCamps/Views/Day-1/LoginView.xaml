<Window x:Class="WPF.BootCamps.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.BootCamps.Views"
        mc:Ignorable="d"
        Title="LoginView" Height="500" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6"
        ResizeMode="NoResize">
    <Grid>
        <!-- Login Card -->
        <Border
            Width="360"
            Padding="30"
            CornerRadius="12"
            Background="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Effect="{DynamicResource DropShadowEffect}">

            <StackPanel>

                <!-- Title -->
                <TextBlock
                    Text="Welcome Back"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="#111827"
                    HorizontalAlignment="Center" />

                <TextBlock
                    Text="Sign in to your account"
                    Margin="0,6,0,24"
                    FontSize="13"
                    Foreground="#6B7280"
                    HorizontalAlignment="Center" />

                <!-- Email -->
                <TextBlock
                    Text="Email"
                    FontSize="12"
                    Foreground="#374151"
                    Margin="0,0,0,4" />

                <TextBox
                    Height="40"
                    Padding="10,0"
                    FontSize="14"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    Background="#F9FAFB" />

                <!-- Password -->
                <TextBlock
                    Text="Password"
                    FontSize="12"
                    Foreground="#374151"
                    Margin="0,16,0,4" />

                <PasswordBox
                    Height="40"
                    Padding="10,0"
                    FontSize="14"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    Background="#F9FAFB" />

                <!-- Login Button -->
                <Button
                    Content="Login"
                    Height="42"
                    Margin="0,24,0,0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#2563EB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand" />

                <!-- Footer -->
                <TextBlock
                    Text="© 2026 Your Company"
                    Margin="0,20,0,0"
                    FontSize="11"
                    Foreground="#9CA3AF"
                    HorizontalAlignment="Center" />

            </StackPanel>
        </Border>
    </Grid>

    <!-- Resources -->
    <Window.Resources>
        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="20"
            ShadowDepth="0"
            Opacity="0.15" />
    </Window.Resources>
    
</Window>

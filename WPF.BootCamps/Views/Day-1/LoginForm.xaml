<Window x:Class="WPF.BootCamps.Views.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.BootCamps.Views"
        mc:Ignorable="d"
        Title="LoginForm" Height="550" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,20"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" CornerRadius="20" Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Color="Black" Opacity="0.5" Direction="270" ShadowDepth="5"/>
        </Border.Effect>

        <StackPanel VerticalAlignment="Center">
            <Ellipse Width="80" Height="80" Fill="#2D2D30" Margin="0,0,0,20">
                <Ellipse.OpacityMask>
                    <VisualBrush Visual="{Binding Source={StaticResource {x:Static SystemParameters.WindowCaptionButtonHeightKey}}}"/>
                </Ellipse.OpacityMask>
            </Ellipse>

            <TextBlock Text="مرحباً بك مجدداً" Foreground="White" FontSize="26" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="سجل الدخول للمتابعة" Foreground="#888888" FontSize="14" 
                       HorizontalAlignment="Center" Margin="0,0,0,40"/>

            <TextBlock Text="البريد الإلكتروني" Foreground="#007ACC" FontSize="12" FontWeight="Bold"/>
            <TextBox Style="{StaticResource ModernTextBox}" Tag="email@example.com"/>

            <TextBlock Text="كلمة المرور" Foreground="#007ACC" FontSize="12" FontWeight="Bold"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,5" Background="#2D2D30" Foreground="White" 
                         BorderThickness="0,0,0,2" BorderBrush="#404040" Height="35" Padding="10,0"/>

            <TextBlock Text="نسيت كلمة المرور؟" Foreground="#888888" FontSize="12" 
                       HorizontalAlignment="Right" Cursor="Hand" Margin="0,5,0,30"/>

            <Button Content="تسجيل الدخول" Style="{StaticResource PrimaryButton}"/>

            <Button Content="إغلاق" Background="Transparent" Foreground="#E81123" BorderThickness="0" 
                    Margin="0,15,0,0" Click="CloseButton_Click" Cursor="Hand"/>
            
        </StackPanel>
    </Border>
    
</Window>

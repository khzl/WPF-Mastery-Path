<Window x:Class="WPF.BootCamps.Views.Day_5.ProductForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.BootCamps.Views.Day_5"
        mc:Ignorable="d"
        Title="ProductForm" Height="450" Width="500">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Name -->
        <TextBlock Text="Name: "
                   Grid.Row="0"
                   Margin="0,0,16,16"
                   FontSize="16" FontWeight="SemiBold"/>
        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Margin="0,0,0,16"/>
        <!-- Price -->
        <TextBlock
            Text="Price: "
            Grid.Row="1" Margin="0,0,16,16"
            FontSize="16" FontWeight="SemiBold"/>
        <TextBox
            Grid.Row="1" Grid.Column="1"
            Margin="0,0,0,16"/>
        <!-- Category -->
        <TextBlock
            Text="Category: "
            Grid.Row="2"
            Margin="0,0,16,16"
            FontSize="16" FontWeight="SemiBold"/>
        <ComboBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,0,0,16"/>
        <!-- Description -->
        <TextBlock
            Text="Description: "
            Grid.Row="3"
            Margin="0,0,16,16" VerticalAlignment="Top"
            FontSize="16" FontWeight="SemiBold"/>
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            AcceptsReturn="True"
            TextWrapping="Wrap"/>
        <!-- Button -->
        <StackPanel
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,16,0,0">
            <Button
                Content="Save" Width="100"
                Margin="0,0,8,0"
                FontSize="12" FontWeight="SemiBold"/>
            <Button
                Content="Cancel"
                Width="100"
                Margin="0,0,8,0"
                FontSize="12" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>

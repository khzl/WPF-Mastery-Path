<Window x:Class="WPF.BootCamps.Views.Day_5.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.BootCamps.Views.Day_5"
        mc:Ignorable="d"
        Title="LoginForm" 
        Height="350" Width="400">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> <!-- Column 1 For Label -->
            <ColumnDefinition Width="*"/> <!-- Column 2 For Inputs -->
        </Grid.ColumnDefinitions>
        <!-- Title -->
        <TextBlock
            Text="Login Form"
            FontSize="22" FontWeight="SemiBold"
            Grid.Row="0" Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Margin="0,0,0,24"/>
        <!-- Email -->
        <TextBlock
            Text="Email: "
            Grid.Row="1" VerticalAlignment="Center"
            Margin="0,0,16,16"
            FontSize="18" FontWeight="SemiBold"/>
        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,16"/>
        <!-- Password -->
        <TextBlock
            Text="Password: "
            Grid.Row="2"
            VerticalAlignment="Center"
            Margin="0,0,16,16"
            FontSize="18" FontWeight="SemiBold"/>
        <PasswordBox 
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,0,0,16"/>
        <!-- Button -->
        <Button
            Content="Login"
            Grid.Row="3" Grid.Column="2"
            Height="35"
            HorizontalAlignment="Stretch"
            Margin="0,0,0,8"
            FontSize="18" FontWeight="SemiBold"/>
        <!-- Forget Password -->
        <TextBlock
            Text="Forget Password?"
            Grid.Row="4"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            FontSize="12"
            FontWeight="SemiBold"/>
    </Grid>
</Window>

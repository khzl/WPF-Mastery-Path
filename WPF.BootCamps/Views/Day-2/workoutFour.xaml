<Window x:Class="WPF.BootCamps.Views.Day_2.workoutFour"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.BootCamps.Views.Day_2"
        mc:Ignorable="d"
        Title="workoutFour" 
        Height="500" 
        Width="800">
    <Grid>
        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/> <!-- Main Area -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>
        
        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/> <!-- Fixed SideBar -->
            <ColumnDefinition Width="*"/> <!-- Main Content Area -->
        </Grid.ColumnDefinitions> 
        
        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="#2C3E50" Height="50">
            <TextBlock Text="Header"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="24" FontWeight="Bold"/>
        </Border>
        
        <!-- SideBar -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="#34495E">
            <TextBlock Text="SideBar"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="20" FontWeight="Bold"/>
        </Border>
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Grid.Column="1"
              Background="#ECF0F1">
            <TextBlock
                Text="Main Content"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="24" FontWeight="Bold"/>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Grid.Column="2"
                Background="#2C3E50" Height="40">
            <TextBlock
                Text="Footer"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24" FontWeight="Bold"/>
        </Border>
        
    </Grid>
</Window>

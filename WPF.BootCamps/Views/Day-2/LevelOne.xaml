<Window x:Class="WPF.BootCamps.Views.Day_2.LevelOne"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.BootCamps.Views.Day_2"
        mc:Ignorable="d"
        Title="First Form"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <!-- محتوى الواجهة -->
    <Grid>
        <!-- Removed unsupported 'Spacing' attribute.
             Use Margin on child elements to create spacing instead. -->
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >

            <TextBlock
                Text="Welcome To First Design"
                FontSize="24"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="10,0,10,12" />

            <Button
                Content="Start"
                FontSize="18"
                FontWeight="Bold"
                Width="120"
                Height="40"
                Margin="20,0,20,0"
                HorizontalAlignment="Center" />

        </StackPanel>
    </Grid>
</Window>

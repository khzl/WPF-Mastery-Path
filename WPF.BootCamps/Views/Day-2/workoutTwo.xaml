<Window x:Class="WPF.BootCamps.Views.Day_2.workoutTwo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.BootCamps.Views.Day_2"
        mc:Ignorable="d"
        Title="workoutTwo" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!--العنوان-->
            <RowDefinition Height="*"/>
            <!-- النصوص -->
            <RowDefinition Height="Auto"/>
            <!-- الزر -->
        </Grid.RowDefinitions>

        <TextBlock
            Text="Second Workout"
            FontSize="24"
            FontWeight="Bold"
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="0,10,0,10"/>
        <TextBlock
            Text="please Enter This button ..."
            FontSize="14"
            FontWeight="Bold"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <Button
            Content="Start"
            Width="100"
            Height="20"
            FontSize="12"
            FontWeight="Bold"
            Grid.Row="2"
            HorizontalAlignment="Center"
            Margin="0,10,0,10"/>
        <Button
            Background="Blue"
            Foreground="Red"
            Content="This Is a Button"
            FontSize="12"
            FontWeight="Bold"
            VerticalAlignment="Top"
            HorizontalAlignment="Center" Margin="0,122,0,0" Grid.Row="1" Width="115"/>
    </Grid>
</Window>
